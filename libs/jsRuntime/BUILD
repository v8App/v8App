genrule(
    name = "build-test-env-file",
    srcs = [
        "@//third_party/v8:icu_dat",
        "@//third_party/v8:snapshot_blob",
    ],
    outs = ["test.env"],
    cmd = 'echo "V8_ICU_DATA=$(rlocationpath //third_party/v8:icu_dat)" >> $@;' +
          'echo "V8_SNAPSHOT_BIN=$(rlocationpath //third_party/v8:snapshot_blob)" >> $@;',
)
